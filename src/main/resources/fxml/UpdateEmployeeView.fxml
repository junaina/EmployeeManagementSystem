<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UpdateEmployeeController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <children>
        <Label text="Name"/>
        <TextField fx:id="nameField"/>
        <Label text="Position"/>
        <TextField fx:id="positionField"/>
        <Label text="Department"/>
        <TextField fx:id="departmentField"/>
        <Label text="Base Salary"/>
        <TextField fx:id="baseSalaryField"/>
        <Label text="Bonus Percent"/>
        <TextField fx:id="bonusPercentField"/>
        <Label text="Performance Factor"/>
        <TextField fx:id="performanceFactorField"/>
        <Button text="Update" onAction="#handleUpdateEmployee"/>
    </children>
</VBox>
